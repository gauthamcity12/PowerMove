<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#37474F"
    android:orientation="vertical"
    tools:context="io.github.gauthamcity12.powermove.MainOptionsActivity"
    android:weightSum="1">

    <Button
        android:id="@+id/foodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Hungry!"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="10px"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:background="@color/primary"
        android:onClick="forFood"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hopefully, within the next few steps, we can find you a place to eat that you may have never tried before or aid you in dealing with those indecisive people who make picking restaurants soo difficult. Click the button above!!"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27"
        android:padding="5dp" />

</LinearLayout>
